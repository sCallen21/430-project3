<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Cthulhu Clicker</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
</head>
<body>
  <div class="wrapper">
  <nav><a href="/login"><img id="logo" src="/assets/img/face.png" alt="face logo"/></a>
    <div class="navlink"><a href="/game">Game</a></div>
    <div class="navlink"><a href="/rules">Rules</a></div>
    <div class="navlink"><a href="/leaderboard">Leaderboard</a></div>
  </nav>
  <section id="changePW">
    <form id="changePWForm" name="changePWForm" action="/changePW" method="POST" class="mainForm">
      <label for="pass">New Password: </label>
      <input id="pass" type="password" name="pass" placeholder="password"/>
      <label for="pass2">New Password: </label>
      <input id="pass2" type="password" name="pass2" placeholder="retype password"/>
      <input type="hidden" name="_csrf" value={{csrfToken}} />
      <input class="formSubmit" type="submit" value="Change Password" />
    </form>
  </section>
    <div class="push"></div>
  </div>
  <footer>
    Stephen Callen | 2018
  </footer>
  <div id="domoMessage"><img id="speech" src="/assets/img/marble.png" alt="speech box"/>
    <h3><span id="errorMessage"></span></h3>
  </div>
  <script src="/assets/bundle.js"></script>
</body>
</html>